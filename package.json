{
  "name": "telegram-bot-json-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "db:create": "docker exec postgres-local psql -U postgres -d telegram_editor -c \"CREATE TABLE IF NOT EXISTS sessions (id UUID PRIMARY KEY, data JSONB, status TEXT DEFAULT 'pending');\"",
    "db:reset": "docker exec postgres-local psql -U postgres -d telegram_editor -c \"DROP TABLE IF EXISTS sessions;\" && npm run db:create",
    "db:status": "docker ps | grep postgres-local"
  },
